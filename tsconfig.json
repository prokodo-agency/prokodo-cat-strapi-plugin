{
  "extends": "@strapi/typescript-utils/tsconfigs/admin",

  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "strict": true,
    "paths": {
      "@strapi/*": ["node_modules/@strapi/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  "include": ["admin", "custom.d.ts"],

  "exclude": [
    "node_modules/",
    "dist/",
    "server/",
    "**/*.test.ts"
  ]
}
